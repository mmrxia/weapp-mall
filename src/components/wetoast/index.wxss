/**toast.wxss**/
.wetoast {
    display: none;
}

.wetoast_show {
    display: block;
}

.wetoast__mask {
    position: fixed;
    z-index: 1000;
    top: 0;
    right: 0;
    left: 0;
    bottom: 0;
}

.wetoast__bd {
    opacity: 0;
    display: flex;
    flex-direction: column;
    position: fixed;
    z-index: 5000;
    max-width: 70%;
    top: 140px;
    left: 50%;
    padding: 20px;
    box-sizing: border-box;
    transform: translate3d(-50%, 0, 0);
    background: rgba(0, 0, 0, 0.65);
    border-radius: 5px;
    color: #FFFFFF;
    word-wrap: break-word;
    word-break: break-all;
    align-items: center;
    justify-content: space-around;
}

.wetoast__bd__img {
    margin-top: 3px;
    margin-bottom: 10px;
}

.wetoast__bd__img_desc {
    width: 35px;
    height: 35px;
    vertical-align: middle;
}

.wetoast__bd__title {
    margin: 3px 0;
    font-size: 16px;
}