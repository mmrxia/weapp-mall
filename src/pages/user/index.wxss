/* pages/user/index.wxss 个人中心样式*/
/*字体相关*/
.h1{font-size:100rpx;}
.h2{font-size :80rpx;}
.h3{font-size :60rpx;}
.h4{font-size :40rpx;}
.h5,.f3{font-size :26rpx;}
.h6{font-size :24rpx;}
.p{font-size :28rpx;line-height :1.5;}
.f1{font-size :22rpx;}
.txt-primary{color:#ff4d61;}
.txt-gray,.txt-c4{color:#999999;}
.txt-c5{color:#666666;}
.txt-c6{color:#333333;}
.txt-blue{color:#477ed8;}
.txt-green{color:#76c126;}
text.del{ text-decoration: line-through;  }

.block,.panel,.ul,.entry,.info-box{background-color:#fff;font-size :28rpx;}
/* 块 */
.block{padding:60rpx 20rpx;}
.block.center{text-align :center;}
.block.right{text-align :right;}
/*panel*/
.panel{margin :20rpx 0;}
.panel-hd,.panel-ft{display :flex;min-height :88rpx;justify-content :center;align-items :center;}
.panel-hd{border-bottom:1rpx solid #dcdcdc;padding :0 20rpx;}
.panel-hd-l{margin-right :28rpx;}
.panel-ft{border-top:1rpx solid #dcdcdc;}
.panel-bd{}
.no-padding{padding:0;}
/*列表*/
.ul{margin-bottom :20rpx;}
.li{display :flex;padding:20rpx;align-items :center;border-bottom:1rpx solid #dcdcdc;min-height :88rpx;overflow :hidden;}
.li:last-child{border:0}
.li-bd{position :relative; }
.li-ft{flex:1;margin-right :40rpx;text-align: right}

/*单条*/
.entry{width :100%; margin-bottom: 20rpx; padding :0 28rpx; min-height :88rpx;display :flex;}
/*信息展示*/
.info-box{}

.tab{display:flex;line-height :1;text-align :center; border-bottom :1rpx solid #DCDCDC;background-color :#fff;justify-content :center;margin-bottom :20rpx;}
.tab-item{flex:1;padding:30rpx 0;display :flex;flex-direction :column;align-items :center;}
.tab-icon{position:relative;flex :1;width :40rpx;height :40rpx;margin :12rpx 0;}
.tab-item.active{color:#ff4d61;border-bottom :4rpx solid #ff4d61;}
.no-border{border:0;}
.footer{position :fixed;width :100%; max-height :128rpx; bottom :0; padding:20rpx; border-top: 1rpx solid #dcdcdc; background-color :#FFFFFF;}

.label{ color :#FFFFFF; font-size :20rpx; background-color :#ff4d61; border-radius :5rpx; padding:2rpx 4rpx;  }
.label-orange{background-color :#FBA102;}
.space{height :128rpx;}

input{ position :relative; background-color :#ffffff;padding:0 20rpx;margin :0 20rpx; border :1rpx solid #DCDCDC; border-radius :10rpx;  }

/*个人中心首页*/
.panel-hd{padding: 0 28rpx;}
.ul-user .li{padding:0 28rpx;}
.ul-user .li,.ul-user .li:last-child:after{border:0}
.ul-user .li:after{content:"";position :absolute;border-bottom :1rpx solid #DCDCDC;bottom :0;left:0;margin-left :88rpx; width :100%;height :1rpx;}
.ul-user .li-hd{margin-right :28rpx;}

.profile{height:280rpx;text-align: center;background: url("/images/center_bg@2x.png") no-repeat;padding:50rpx 0;}
.avatar image{width: 120rpx;height: 120rpx;border-radius: 50%;background-color :#fff;}

.tip-fly{position :absolute;font-size :20rpx;background-color :#000;color :#fff;line-height :1;padding:10rpx 16rpx;opacity :0.6;border-radius :8rpx;top:50%;right:-20rpx;transform: translate(100%, -50%);white-space: nowrap}
.tip-fly::before{content:"";position :absolute;border-top: 18rpx solid transparent;border-right: 20rpx solid #000;border-bottom: 18rpx solid transparent;left:-8rpx;top:2rpx;}

.zebra{
    height: 6px;
    background-repeat: repeat-x;
    background-size: 80px 10px;
    background-image: linear-gradient(45deg, #FCD0C9 20%, #fff 20%, #fff 35%, #C7E6F7 35%, #C7E6F7 65%, #fff 65%, #fff 80%, #FCD0C9 80%);
}